// permite acesso aos dados do projeto
generator client {
  provider = "prisma-client-js"
}

// informa que o banco de dados que vamos utilizar eh o postgree, e conectar na URL passada como parametro.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// vai definir o o modelo da entidade User
model User {
  id          Int           @id @default(autoincrement())
  fullname    String        // Nome completo do usuário
  username    String        @unique // Nome de usuário
  password    String        // Senha
  is_admin    Boolean       @default(false)
  sessions    Session[]
}

// vai definir o o modelo da entidade Session
model Session {
  sessid      String        @id               // id da sessão
  user_id     Int                             // id do usuário
  user        User          @relation(fields: [user_id], references: [id])
  start_time  DateTime      @default(now())   // data/hora de início da sessão
}
